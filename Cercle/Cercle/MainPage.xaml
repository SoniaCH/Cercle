<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Cercle"
             x:Class="Cercle.MainPage">
    
    <StackLayout Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="Center">
        <Frame x:Name="EXStep1" CornerRadius="15" BackgroundColor="Gainsboro" Padding="1,1,1,1"  HasShadow="False" WidthRequest="30" HeightRequest="30" VerticalOptions="Center"></Frame>
    <BoxView HeightRequest="0.5" WidthRequest="80" BackgroundColor="Silver" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
        <Frame x:Name="EXStep2" CornerRadius="15" BackgroundColor="Gainsboro" Padding="1,1,1,1"  HasShadow="False" WidthRequest="30" HeightRequest="30" VerticalOptions="Center"></Frame>
    <BoxView HeightRequest="0.5" WidthRequest="80" BackgroundColor="Silver" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
        <Frame x:Name="EXStep3" CornerRadius="15" BackgroundColor="Gainsboro" Padding="1,1,1,1"  HasShadow="False" WidthRequest="30" HeightRequest="30" VerticalOptions="Center"></Frame>
    </StackLayout>

</ContentPage>
